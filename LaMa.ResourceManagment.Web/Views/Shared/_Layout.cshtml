@using LaMa.Framework.Core.Web.Enums
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Resource Managment</title>
    @Html.LoadDefaultStyleSheets()
    @Html.LoadDefaultJavascriptFiles()
    @RenderSection("Styles", false)
    <link href="~/Assets/Styles/Layout.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <header id="mainHeader">
            <div class="branding row">
                <div class="col-md-1 pull-right"></div>
                <div id="loginContainer" class="pull-right">
                    <div class="text-right">
                        <p>
                            <a href="#">Mathieu TODO Laforce <span class="fa fa-user"></span></a>
                        </p>
                    </div>
                </div>

                <div class="branding-company col-md-offset-1 col-md-4">
                    <h1>LaMa IT</h1>
                </div>

                <div class="branding-application col-md-offset-2 col-md-4">
                    <h1 class="text-right"> Resource Managment</h1> 
                </div>
                <div class="col-md-1"></div>
            </div>

            <div class="container-fluid">
                <div id="mainNavigation" class="row">
                    <nav class="col-md-offset-1 navbar navbar-default col-md-10">
                        <ul class="nav navbar-nav">
                            @Html.ActionLinkForNavigation("Home", "Index", "Home")
                            @Html.ActionLinkForNavigation("Applications", "Index", "Application")
                        </ul>
                    </nav>
                </div>
            </div>
           
        </header>
        <div id="mainContent" class="container-fluid">
            @RenderBody()
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - LaMa IT</p>
        </footer>
      </div> 
     @RenderSection("Scripts",false)
</body>
</html>